{% schema %}
  {
    "name": "Trending Products",
    "settings": [
      {
        "type":"text",
        "id": "main-heading",
        "label": "Heading"
      },
      {
        "type":"collection",
        "id": "product_collection",
        "label": "Product Collection"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Enter Collection Product "
      },
      {
      "type": "range",
      "id": "products_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    }
    ],
    "presets": [
      {
        "name": "Trending Products"
      }
    ]
  }
{% endschema %}

